<h2>Create a new bbbbbb Post</h2>

<form id="new-post">
  <p>
    <label for="new-post-name">name</label>
    <input name="new-post-name" id="new-post-name" type="text">
  </p>
  <textarea name="new-post-type" id="new-post-type"></textarea>
  <input type="submit">
</form><!-- #new-post -->

<hr>

<% for (var i = 0, len = posts.models.length; i < len; i++) { %>
  <div class="post">
    <h3><%= posts.models[i].get('name') %></h3>
    <p><%= posts.models[i].get('type') %></p>
    <p><a href="#" class="remove-post" id="<%= posts.models[i].get('_id') %>">Remove Post</a></p>
  </div><!-- .post -->
  <hr>
<% } %>